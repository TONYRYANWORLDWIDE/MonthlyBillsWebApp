<script type="text/javascript">


    function AppendRow(row, id, bill, date, cost) {
        $(".id", row).find("span").html(id);
        $(".Bill", row).find("span").html(bill);
        $(".Bill", row).find("input").val(bill);
        $(".Date", row).find("span").html(date);
        $(".Date", row).find("input").val(date);
        $(".Cost", row).find("span").html(cost);
        $(".Cost", row).find("input").val(cost);
        row.find(".Edit").show();
        row.find(".Delete").show();
        $("#tblMonthlyBills").append(row);
    };
    //Add event handler.
    $("body").on("click", "#btnAdd", function () {
        var txtBill = $("#txtBill");
        var txtDate = $("#txtDate");
        var txtCost = $("#txtCost");
        $.ajax({
            type: "POST",
            url: "/MonthlyBills/InsertMonthlyBills",
            data: '{bill: "' + txtBill.val() + '", date: "' + txtDate.val() + '" + cost: "' + txtCost.val() + '" }',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (r) {
                var row = $("#tblMonthlyBills tr:last-child");
                if ($("#tblMonthlyBills tr:last-child span").eq(0).html() != "&nbsp;") {
                    row = row.clone();
                }
                AppendRow(row, r.id, r.Bill, r.Date, r.Cost);
                txtBill.val("");
                txtDate.val("");
                txtCost.val("");
            }
        });
    });
