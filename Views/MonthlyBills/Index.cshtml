            $("body").on("click", "#tblMonthlyBills .Edit", function () {
            var row = $(this).closest("tr");
            $("td", row).each(function () {
                if ($(this).find("input").length > 0) {
                    $(this).find("input").show();
                    $(this).find("span").hide();
                }
            });
            row.find(".Update").show();
            row.find(".Cancel").show();
            row.find(".Delete").hide();
            $(this).hide();
            });

            $("body").on("click", "#tblMonthlyBills .Update", function () {
            var row = $(this).closest("tr");
            $("td", row).each(function () {
                if ($(this).find("input").length > 0) {
                    var span = $(this).find("span");
                    var input = $(this).find("input");
                    span.html(input.val());
                    span.show();
                    input.hide();
                }
            });
            row.find(".Edit").show();
            row.find(".Delete").show();
            row.find(".Cancel").hide();
            $(this).hide();
 
            var monthlyBill = {};
            monthlyBill.id = row.find(".id").find("span").html();
            monthlyBill.Bill = row.find(".Bill").find("span").html();
            monthlyBill.Date = row.find(".Date").find("span").html();
            monthlyBill.Cost = row.find(".Cost").find("span").html();
            $.ajax({
                type: "POST",
                url: "/MonthlyBills/UpdateMonthlyBills",
                data: '{monthlyBill:' + JSON.stringify(monthlyBill) + '}',
                contentType: "application/json; charset=utf-8",
                dataType: "json"
            });
        });

</script>

