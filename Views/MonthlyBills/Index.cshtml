@model IEnumerable<MonthlyBillsWebApp.Models.MonthlyBill>


@{
    Layout = null;
}
<h2>Monthly Bills</h2>


<p>
    @Html.ActionLink("Create New", "Create")

</p>

<table id="tblMonthlyBills" class="table">
    <tr class="trbold">

        <th style="width:100px">id</th>
        <th style="width:150px">Bill</th>
        <th style="width:150px">Date</th>
        <th style="width:150px">Cost</th>
        <th style="width:150px"></th>
    </tr>

    @foreach (MonthlyBillsWebApp.Models.MonthlyBill monthlyBill in Model)
    {
        <tr>
            <td class="id">
                @*@Html.EditorFor(modelItem => item.id)*@

                <span>@monthlyBill.id</span>
            </td>
            <td class="Bill">
                @* @Html.EditorFor(modelItem => item.Bill)*@
                <span>@monthlyBill.Bill</span>
                <input type="text" value="@monthlyBill.Bill" style="display:none" />
            </td>
            <td class="Date">
                @*@Html.EditorFor(modelItem => item.Cost)*@
                <span>@monthlyBill.Date</span>
                <input type="text" value="@monthlyBill.Date" style="display:none" />
            </td>
            <td class="Cost">
                @*@Html.EditorFor(modelItem => item.Date)*@
                <span>@monthlyBill.Cost</span>
                <input type="text" value="@monthlyBill.Cost" style="display:none" />
            </td>

            <td>
                <a class="Edit" href="javascript:;">Edit</a>
                <a class="Update" href="javascript:;" style="display:none">Update</a>
                <a class="Cancel" href="javascript:;" style="display:none">Cancel</a>
                <a class="Delete" href="javascript:;">Delete</a>
            </td>
        </tr>
    }


</table>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
