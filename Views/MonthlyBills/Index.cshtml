<script type="text/javascript">

            $(function () {
        //Remove the dummy row if data present.
        if ($("#tblCustomers tr").length > 2) {
            $("#tblCustomers tr:eq(1)").remove();
        } else {
            var row = $("#tblCustomers tr:last-child");
            row.find(".Edit").hide();
            row.find(".Delete").hide();
            row.find("span").html('&nbsp;');
        }
    });

    function AppendRow(row, id, bill, date, cost) {
        //Bind CustomerId.
        $(".id", row).find("span").html(id);

        //Bind Bill.
        $(".Bill", row).find("span").html(bill);
        $(".Bill", row).find("input").val(bill);

        //Bind Date.
        $(".Date", row).find("span").html(date);
        $(".Date", row).find("input").val(date);

        //Bind Cost.
        $(".Cost", row).find("span").html(cost);
        $(".Cost", row).find("input").val(cost);

        row.find(".Edit").show();
        row.find(".Delete").show();
        $("#tblMonthlyBills").append(row);
    };


    //Add event handler.
    $("body").on("click", "#btnAdd", function () {
        var txtBill = $("#txtBill");
        var txtDate = $("#txtDate");
        var txtCost = $("#txtCost");
        $.ajax({
            type: "POST",
            url: "/MonthlyBills/InsertMonthlyBills",
            data: '{bill: "' + txtBill.val() + '", date: "' + txtDate.val() + '" + cost: "' + txtCost.val() + '" }',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (r) {
                var row = $("#tblMonthlyBills tr:last-child");
                if ($("#tblMonthlyBills tr:last-child span").eq(0).html() != "&nbsp;") {
                    row = row.clone();
                }
                AppendRow(row, r.id, r.Bill, r.Date, r.Cost);
                txtBill.val("");
                txtDate.val("");
                txtCost.val("");
            }
        });
    });

    $("body").on("click", "#tblMonthlyBills .Edit", function () {
        var row = $(this).closest("tr");
        $("td", row).each(function () {
            if ($(this).find("input").length > 0) {
                $(this).find("input").show();
                $(this).find("span").hide();
            }
        });
        row.find(".Update").show();
        row.find(".Cancel").show();
        row.find(".Delete").hide();
        $(this).hide();
    });

        $("body").on("click", "#tblMonthlyBills .Cancel", function () {
        var row = $(this).closest("tr");
        $("td", row).each(function () {
            if ($(this).find("input").length > 0) {
                $(this).find("input").hide();
                $(this).find("span").show();
            }
        });
        row.find(".Edit").show();
        row.find(".Update").hide();
        row.find(".Cancel").hide();
        row.find(".Delete").show();
        $(this).hide();
    });


    $("body").on("click", "#tblMonthlyBills .Update", function () {
        var row = $(this).closest("tr");
        $("td", row).each(function () {
            if ($(this).find("input").length > 0) {
                var span = $(this).find("span");
                var input = $(this).find("input");
                span.html(input.val());
                span.show();
                input.hide();
            }
        });
        row.find(".Edit").show();
        row.find(".Delete").show();
        row.find(".Cancel").hide();
        $(this).hide();

        var monthlyBill = {};
        monthlyBill.id = row.find(".id").find("span").html();
        monthlyBill.Bill = row.find(".Bill").find("span").html();
        monthlyBill.Date = row.find(".Date").find("span").html();
        monthlyBill.Cost = row.find(".Cost").find("span").html();
        $.ajax({
            type: "POST",
            url: "/MonthlyBills/UpdateMonthlyBills",
            data: '{monthlyBill:' + JSON.stringify(monthlyBill) + '}',
            contentType: "application/json; charset=utf-8",
            dataType: "json"
        });
    });

    $("body").on("click", "#tblMonthlyBills .Delete", function () {
    if (confirm("Do you want to delete this row?")) {
        var row = $(this).closest("tr");
        var id = row.find("span").html();
        $.ajax({
            type: "POST",
            url: "/MonthlyBills/Delete",
            data: '{id: ' + id + '}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                if ($("#tlbMonthlyBills tr").length > 2) {
                    row.remove();
                } else {
                    row.find(".Edit").hide();
                    row.find(".Delete").hide();
                    row.find("span").html('&nbsp;');
                }
            }
        });
    }
});


</script>

