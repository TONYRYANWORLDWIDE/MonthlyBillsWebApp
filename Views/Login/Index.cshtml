@model MonthlyBillsWebApp.Models.User

@{
    Layout = null;

}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        #login-div{
            position: absolute;
            left: 40%;
            top: 40%;
            border: 1px solid black;
            padding: 20px 20px;
            font-size: 24px;
        }
        .inputboxes{
            overflow: hidden;
            float: right;
            font-size: 24px;
        }
        .title{
            text-decoration: underline;
            text-align:center;
            font-size: 28px;
            vertical-align: middle;

        }
    </style>
</head>
<body>
    <div id="login-div">
        @using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
        {
            <table>
                <tr>
                    @*<td></td>
                    <td>Welcome</td>*@
                </tr>
                <tr>
                    <td class="inputboxes">                         
                        @Html.LabelFor(model => model.UserName)
                        @Html.EditorFor(model => model.UserName)
                    </td>
                        
                </tr>
                <tr>
                    <td class="inputboxes">
                        @Html.LabelFor(model => model.Password)                 
                        @Html.EditorFor(model => model.Password)
                    </td>
                </tr>
                <tr>
                    <td></td>                    
                    <td>@Html.ValidationMessageFor(model => model.Password)</td>
                </tr>
                <tr>
                    <td colspan="2">      
                        <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" name="name" value="Login" />
                        <input type="reset" name="name" value="Clear" />
                    </td>
                </tr>
            </table>
        }
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
